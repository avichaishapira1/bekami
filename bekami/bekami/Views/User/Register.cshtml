
@model bekami.Models.User

@{ ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<!-- slider Area Start-->
<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="single-slider slider-height2 d-flex align-items-center" style='background:url("/assets/img/hero/category.jpg")'>
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Register</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider Area End-->
<!--================Page Area =================-->
<section class="checkout_area section_padding">
    <div class="container">
        <div class="billing_details">
            <div class="row">
                <!--================Register Area =================-->
                <div class="col-lg-8" style="background:#f7f7f7;">
                    <div class="order_box">
                        <h2>Register</h2>
                    </div>
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-4 form-group p_star">
                        </div>
                        <div class="col-md-4 form-group p_star">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="single-input" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 form-group p_star">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="single-input" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group p_star">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="single-input" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 form-group p_star">
                        </div>
                        <div class="col-md-4 form-group p_star">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="single-input" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 form-group p_star">
                        </div>
                        <div class="col-md-4 form-group p_star">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="single-input" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                <!--================End Register Area =================-->
                <!--================Terms Area =================-->
                <div class="col-lg-4">
                    <div class="order_box">
                        <h2>Terms&Conditions</h2>


                
                    </div>
                </div>
                <!--================Terms END =================-->

            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}