@model bekami.Models.Product
@using bekami.Models

@{
    ViewData["Title"] = "Product Page";
}

<section class="product_image_area">
    <div class="container">
        <div class="billing_details">
            <div class="row">
                <!--=Image Area =-->
                <div class="col-md-6">
                    <div class="product_img_slide owl-carousel">
                        <div class="single_product_img">
                            <img src="@Model.Imagepath" class="img-fluid">
                        </div>
                    </div>
                </div>
                <!--=End Image Area =-->
                <!--================Description Area =================-->
                <div class="col-md-6">
                    <div class="order_box">
                        <p>
                            <h1>@Model.Name</h1>
                            <hr />
                            @Model.Description <br />
                            <hr />
                            @Model.Size <br />
                            <hr/>
                            @Model.Color <br />
                            <hr />
                            <h6>Price: @Html.DisplayFor(Model => Model.Price) ₪</h6>
                        </p>

                        <!--================Buttons Area =================-->
                        <div class="card_area">
                            <div class="add_to_cart">
                                <a class="btn_3" id="addToCart" style="cursor: pointer;">Add To Cart</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

