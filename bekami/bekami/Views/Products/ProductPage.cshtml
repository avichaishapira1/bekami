@model bekami.Models.Product
@using bekami.Models

@{
    ViewData["Title"] = "Product Page";
}

<section>
    <br />
    <div class="container">
        <div>
            <div class="row">
                <!--images-->

                <div class="col-lg-6">
                    <div class="product_img_slide owl-carousel">
                        <div class="single_product_img">
                            <img src="@Model.Imagepath" class="img-fluid" style="min-block-size:400px;min-inline-size:400px">
                        </div>
                    </div>
                </div>
                <!--product description-->
                <div class="col-md-6">
                    <div class="order_box">
                        <p>
                            <h1>@Model.Name</h1>
                            <hr />
                            @Model.Description <br />
                            <hr />
                            @Model.Size <br />
                            <hr />
                            @Model.Color <br />
                            <hr />
                            <h6>Price: @Html.DisplayFor(Model => Model.Price) ₪</h6>
                        </p>

                        <!--=Buttons Area =-->
                        <div class="card_area">
                            <div class="add_to_cart">
                                <a class="btn" asp-area="" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.ProductId">Add To Cart</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

