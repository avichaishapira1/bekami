<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bekami</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar  navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/images and banners/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    @* menu *@
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">WOMEN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">MEN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">KIDS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Stores">STORES</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Aboutus">ABOUT US</a>
                        </li>
                    </ul>
                </div>
                <div class="float-left">
                    <div class="btn-group">
                        <a href="#" class="dropdown" data-toggle="dropdown" aria-haspopup="true" style="margin: 5px">
                            <img src="~/images and banners/user.png" width="20" height="20" alt="" />
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                <a class="dropdown-item">hello, @User.Identity.Name</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">my orders</a>
                                <a class="dropdown-item" href="#">my account</a>
                            }
                            else
                            {
                                <a class="dropdown-item" asp-action="Register" asp-controller="users">Register</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-action="Login" asp-controller="users">log in</a>
                            }

                        </div>
                    </div>
                    <a href="#" role="button" style="margin: 5px">
                        <img src="~/images and banners/heart.png" width="20" height="20" alt="" />
                    </a>
                    <a href="#" role="button" style="margin: 5px">
                        <img src="~/images and banners/shopping-cart .png" width="20" height="20" alt="" />
                    </a>
                </div>
            </div>
         </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            <br><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br />
            &copy; 2021 - Bekami -
            @* add credit card logos to the footer  *@
            <br><img src="https://www.merchantequip.com/image/?logos=v|m|a|p&height=32" alt="Merchant Equipment Store Credit Card Logos" />
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
